/* CSS Variables for Mystical Theme */
:root {
    /* Color Palette - Mystical Purple/Blue Theme */
    --color-bg-main: #0a0a14;
    --color-bg-dark: #05050c;
    --color-bg-light: #1a1a2e;
    --color-primary: #7c3aed;
    --color-primary-light: #8b5cf6;
    --color-primary-dark: #5b21b6;
    --color-secondary: #312e81;
    --color-accent: #06b6d4;
    --color-accent-light: #67e8f9;
    --color-text: #ffffff;
    --color-text-secondary: #d1d5db;
    --color-text-muted: #9ca3af;
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --color-error: #ef4444;
    
    /* Gradients */
    --gradient-primary: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    --gradient-accent: linear-gradient(135deg, var(--color-accent) 0%, var(--color-primary-light) 100%);
    --gradient-dark: linear-gradient(135deg, var(--color-bg-dark) 0%, var(--color-bg-light) 100%);
    --gradient-mystic: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #1e40af 100%);
    
    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2.5rem;
    --spacing-xl: 3.5rem;
    --spacing-2xl: 5rem;
    
    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --radius-full: 999px;
    
    /* Shadows */
    --shadow-light: 0 4px 12px rgba(0, 0, 0, 0.1);
    --shadow-medium: 0 8px 24px rgba(0, 0, 0, 0.2);
    --shadow-heavy: 0 16px 48px rgba(0, 0, 0, 0.3);
    --shadow-glow: 0 0 30px rgba(124, 58, 237, 0.4);
    --shadow-glow-accent: 0 0 30px rgba(6, 182, 212, 0.4);
    
    /* Transitions */
    --transition-fast: 0.2s ease;
    --transition-normal: 0.3s ease;
    --transition-slow: 0.5s ease;
    --transition-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    background-color: var(--color-bg-main);
    color: var(--color-text);
    overflow-x: hidden;
    line-height: 1.6;
    min-height: 100vh;
}

.app-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    padding: var(--spacing-md);
    max-width: 1200px;
    margin: 0 auto;
    z-index: 2;
}

/* Background Animations */
.background-animation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
}

.star-field {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(2px 2px at 20px 30px, #eee, transparent),
        radial-gradient(2px 2px at 40px 70px, #fff, transparent),
        radial-gradient(1px 1px at 90px 40px, #ddd, transparent),
        radial-gradient(1px 1px at 130px 80px, #fff, transparent),
        radial-gradient(2px 2px at 160px 120px, #eee, transparent);
    background-repeat: repeat;
    background-size: 200px 200px;
    animation: twinkle 4s ease-in-out infinite alternate;
}

@keyframes twinkle {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 0.4; }
}

.aura-circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.15;
}

.aura-1 {
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    top: -200px;
    right: -200px;
    animation: pulse-aura 8s ease-in-out infinite;
}

.aura-2 {
    width: 300px;
    height: 300px;
    background: var(--color-accent);
    bottom: -150px;
    left: -150px;
    animation: pulse-aura 12s ease-in-out infinite reverse;
}

@keyframes pulse-aura {
    0%, 100% { transform: scale(1); opacity: 0.15; }
    50% { transform: scale(1.2); opacity: 0.25; }
}

.floating-shape {
    position: absolute;
    color: rgba(255, 255, 255, 0.1);
    font-size: 3rem;
    z-index: 1;
}

.shape-1 {
    top: 20%;
    left: 10%;
    animation: float 20s infinite ease-in-out;
}

.shape-2 {
    top: 60%;
    right: 15%;
    animation: float 25s infinite ease-in-out reverse;
}

.shape-3 {
    bottom: 20%;
    left: 20%;
    animation: float 18s infinite ease-in-out;
}

@keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -50px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
}

/* Progress Indicator */
.progress-container {
    position: relative;
    z-index: 10;
    margin-bottom: var(--spacing-lg);
    width: 100%;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.progress-bar {
    height: 6px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: var(--spacing-xs);
    position: relative;
}

.progress-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, 
        transparent 0%, 
        rgba(124, 58, 237, 0.3) 50%, 
        transparent 100%);
    animation: shimmer 2s infinite;
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.progress-fill {
    height: 100%;
    width: 8.33%; /* Will be updated by JS */
    background: var(--gradient-accent);
    border-radius: var(--radius-full);
    transition: width var(--transition-slow) var(--transition-bounce);
    position: relative;
    z-index: 2;
}

.progress-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.current-step {
    color: var(--color-accent);
    font-weight: 700;
    font-size: 1.125rem;
}

.step-name {
    flex: 1;
}

/* Main Content Area */
.app-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: var(--spacing-md) 0;
    position: relative;
    z-index: 5;
}

.app-step {
    width: 100%;
    animation: slideInUp var(--transition-normal);
}

@keyframes slideInUp {
    from { 
        opacity: 0; 
        transform: translateY(20px); 
    }
    to { 
        opacity: 1; 
        transform: translateY(0); 
    }
}

/* Typography */
.step-title {
    font-family: 'Cinzel', serif;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    text-align: center;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    line-height: 1.1;
}

.step-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    text-align: center;
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

/* Form Styles */
.form-container {
    width: 100%;
    max-width: 500px;
    margin: 0 auto var(--spacing-xl);
}

.form-group {
    margin-bottom: var(--spacing-md);
}

.form-label {
    display: block;
    font-size: 1rem;
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-label i {
    color: var(--color-primary-light);
}

.form-input, .form-select, .form-textarea {
    width: 100%;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    padding: var(--spacing-md);
    color: var(--color-text);
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
    transition: all var(--transition-normal);
}

.form-input:focus, .form-select:focus, .form-textarea:focus {
    outline: none;
    border-color: var(--color-primary-light);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: var(--shadow-glow);
}

.form-textarea {
    min-height: 120px;
    resize: vertical;
}

/* Radio and Checkbox Groups */
.radio-group, .checkbox-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.radio-option, .checkbox-option {
    position: relative;
}

.radio-input, .checkbox-input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
}

.radio-label, .checkbox-label {
    display: flex;
    align-items: center;
    padding: var(--spacing-md);
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.radio-label::before, .checkbox-label::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 0;
    background: var(--gradient-accent);
    transition: height var(--transition-normal);
    z-index: 0;
}

.radio-label span, .checkbox-label span {
    position: relative;
    z-index: 1;
    color: var(--color-text);
}

.radio-input:checked + .radio-label,
.checkbox-input:checked + .checkbox-label {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-glow);
}

.radio-input:checked + .radio-label::before,
.checkbox-input:checked + .checkbox-label::before {
    height: 100%;
    opacity: 0.1;
}

.radio-input:checked + .radio-label span,
.checkbox-input:checked + .checkbox-label span {
    color: var(--color-accent-light);
    font-weight: 600;
}

.radio-label:hover, .checkbox-label:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 255, 255, 0.2);
}

/* Checkbox with custom styling */
.checkbox-custom {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.checkbox-custom-input {
    width: 24px;
    height: 24px;
    border: 2px solid var(--color-primary-light);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition-normal);
    flex-shrink: 0;
}

.checkbox-custom-input.checked {
    background: var(--gradient-accent);
    border-color: var(--color-accent);
}

.checkbox-custom-input.checked::after {
    content: '✓';
    color: white;
    font-weight: bold;
}

.checkbox-custom-label {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.4;
}

.checkbox-custom-label a {
    color: var(--color-accent);
    text-decoration: none;
}

.checkbox-custom-label a:hover {
    text-decoration: underline;
}

/* Loading Step */
.loading-container {
    text-align: center;
    padding: var(--spacing-2xl) 0;
}

.loading-spinner {
    width: 80px;
    height: 80px;
    border: 4px solid rgba(255, 255, 255, 0.1);
    border-top-color: var(--color-accent);
    border-radius: 50%;
    margin: 0 auto var(--spacing-lg);
    animation: spin 1.5s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-sm);
}

.loading-subtext {
    color: var(--color-text-muted);
    font-size: 0.9rem;
}

/* Verification Code */
.verification-container {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
}

.code-inputs {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    margin-bottom: var(--spacing-lg);
}

.code-input {
    width: 50px;
    height: 60px;
    text-align: center;
    font-size: 1.5rem;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-text);
    transition: all var(--transition-normal);
}

.code-input:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: var(--shadow-glow-accent);
}

.code-hint {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-top: var(--spacing-md);
}

.resend-link {
    color: var(--color-accent);
    background: none;
    border: none;
    font-size: 0.875rem;
    cursor: pointer;
    text-decoration: underline;
    margin-top: var(--spacing-md);
}

.resend-link:hover {
    color: var(--color-accent-light);
}

/* Photo Capture */
.photo-container {
    text-align: center;
}

.photo-preview-container {
    position: relative;
    width: 300px;
    height: 300px;
    margin: 0 auto var(--spacing-lg);
    border-radius: var(--radius-xl);
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    border: 3px dashed rgba(255, 255, 255, 0.1);
}

#video-preview, #capture-preview {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
}

.photo-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: var(--color-text-secondary);
}

.photo-placeholder i {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
    color: var(--color-primary-light);
}

.photo-controls {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-bottom: var(--spacing-lg);
}

.photo-fallback {
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.file-input-label {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-md) var(--spacing-lg);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-normal);
}

.file-input-label:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

.file-input {
    display: none;
}

/* Quiz Questions */
.options-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-md);
    width: 100%;
    margin-bottom: var(--spacing-xl);
}

@media (min-width: 640px) {
    .options-container {
        grid-template-columns: repeat(2, 1fr);
    }
}

.option-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    color: var(--color-text);
    font-size: 1.125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-normal);
    text-align: left;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.option-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
}

.option-btn.selected {
    background: rgba(124, 58, 237, 0.2);
    border-color: var(--color-primary);
    box-shadow: var(--shadow-glow);
    transform: translateY(-2px);
}

.option-btn.selected::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-accent);
}

.option-icon {
    margin-right: var(--spacing-sm);
    font-size: 1.5rem;
    color: var(--color-primary-light);
}

.option-btn.selected .option-icon {
    color: var(--color-accent);
}

/* Result Screen */
.result-container {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.result-icon {
    font-size: 5rem;
    color: var(--color-accent);
    margin-bottom: var(--spacing-lg);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
    100% { transform: scale(1); opacity: 1; }
}

.result-title {
    font-family: 'Cinzel', serif;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: var(--spacing-md);
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.result-text {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
    line-height: 1.8;
}

.reading-insights {
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    margin: var(--spacing-xl) 0;
    text-align: left;
    border-left: 4px solid var(--color-accent);
}

.insight-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: var(--color-accent-light);
}

.insight-list {
    list-style: none;
}

.insight-list li {
    margin-bottom: var(--spacing-sm);
    padding-left: var(--spacing-lg);
    position: relative;
}

.insight-list li::before {
    content: '✦';
    position: absolute;
    left: 0;
    color: var(--color-accent);
}

/* CTA Buttons */
.cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    margin-top: var(--spacing-xl);
}

.cta-primary, .cta-secondary {
    padding: var(--spacing-md) var(--spacing-xl);
    border-radius: var(--radius-full);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border: none;
    transition: all var(--transition-normal);
    min-width: 200px;
}

.cta-primary {
    background: var(--gradient-accent);
    color: white;
}

.cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow-accent);
}

.cta-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
    backdrop-filter: blur(10px);
}

.cta-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

/* Navigation Buttons */
.navigation {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 10;
}

.btn {
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-full);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border: none;
    transition: all var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 120px;
}

.btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.4);
}

.btn-primary {
    background: var(--gradient-accent);
    color: white;
}

.btn-primary:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow-accent);
}

.btn-primary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
    backdrop-filter: blur(10px);
}

.btn-secondary:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
}

.btn-secondary:disabled {
    opacity: 0.3;
    cursor: not-allowed;
}

/* Toast Notification */
.toast {
    position: fixed;
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    background: var(--color-bg-light);
    color: var(--color-text);
    padding: var(--spacing-md) var(--spacing-lg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-heavy);
    transform: translateY(100px);
    opacity: 0;
    transition: all var(--transition-normal);
    z-index: 100;
    border-left: 4px solid var(--color-accent);
    max-width: 300px;
}

.toast.show {
    transform: translateY(0);
    opacity: 1;
}

/* Responsive Design */
@media (max-width: 640px) {
    .app-container {
        padding: var(--spacing-sm);
    }
    
    .step-title {
        font-size: 2.25rem;
    }
    
    .step-subtitle {
        font-size: 1.125rem;
    }
    
    .photo-preview-container {
        width: 250px;
        height: 250px;
    }
    
    .code-input {
        width: 40px;
        height: 50px;
        font-size: 1.25rem;
    }
    
    .navigation {
        flex-direction: column-reverse;
        gap: var(--spacing-sm);
    }
    
    .btn {
        width: 100%;
    }
    
    .cta-buttons {
        flex-direction: column;
    }
    
    .cta-primary, .cta-secondary {
        width: 100%;
    }
    
    .options-container {
        grid-template-columns: 1fr;
    }
}

@media (min-width: 1024px) {
    .step-title {
        font-size: 3.5rem;
    }
    
    .step-subtitle {
        font-size: 1.5rem;
    }
}

/* Accessibility */
.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
}

/* Focus styles for keyboard navigation */
:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
}

/* WordPress Specific Styles */
.admin-bar .app-container {
    padding-top: 32px !important;
}

